//Header
header
  position relative

  height 100%
  width 100%
  background-image url(../images/header.jpg)
  background-repeat no-repeat
  background-attachment fixed
  background-size cover
  overflow hidden

  .header-content
    position absolute
    top 50%
    text-align center
    width 100%
    margin-top - header-font-size

    h1
      color white
      font-weight 700
      font-size header-font-size
      span
        background rgba(0,0,0,.4)
        margin-right auto
        margin-left auto
        max-width 1000px
        padding 0px 18px

    h2
      color white
      font-size 30px
      letter-spacing 2px

  @media (max-width: 768px)
    height: 90%
    background-attachment local

//Sections
section
  padding 100px 0

//About
#about
  background-color background-about

  h2
    font-size 40px
    text-align center


  hr
    max-width 50px
    border-width 3px
    border-color purple


//Download
#download
  background-color black
  color white


footer
  background-color background-footer
  color white
  font-family font-open-sans
  //Parallex effect
  overflow hidden
  position relative
  padding-bottom 16%
  // min-height 240px
  z-index -9999


  .footer-content
    //Parallex effect
    z-index -9999
    position fixed
    bottom 0

  .information
    display block

  .copyright
    padding-top 20px
    padding-bottom 20px
    font-size 10px


// Extras
// -- Highlight Color Customization
::-moz-selection
    color white
    text-shadow none
    background rgba(0,0,0,.4)

::selection
    color white
    text-shadow none
    background rgba(0,0,0,.4)


img::selection
    color white
    background transparent

img::-moz-selection
    color white
    background transparent
