@require 'variables'

html, body
  height 100%
  margin 0px
  font-family font-merriweather
  z-index 1

h1,
h2,
h3,
h4,
h5,
h6
  font-family font-open-sans

//Navigation

.navbar-default
  //Purple Theme
  background-color white
  font-family font-open-sans
  transition all 0.5s ease

  .navbar-nav>li>a
    color rgba(purple, 0.7)
    transition 400ms

    &:hover,
    &:focus,
    &:active
      color purple

  .navbar-header .navbar-brand
    font-weight 700
    color rgba(purple, 0.7)
    transition 400ms
    text-transform uppercase
    font-size 20px

    &:hover,
    &:focus,
    &:active
      color purple

  @media (min-width: 768px)
    //Transparent theme
    background-color transparent

    .navbar-nav>li>a
      color light-white
      transition 400ms

      &:hover,
      &:focus,
      &:active
        color white

    .navbar-header .navbar-brand
      font-weight 700
      color light-white
      transition 400ms
      text-transform uppercase
      font-size 20px

      &:hover,
      &:focus,
      &:active
        color white

    &.affix
      background-color white

      .navbar-nav>li>a
        color rgba(purple, 0.7)
        transition 400ms

        &:hover,
        &:focus,
        &:active
          color purple

      .navbar-header .navbar-brand
        color rgba(purple, 0.7)

        &:hover,
        &:focus,
        &:active
          color purple


