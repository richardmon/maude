body(ng-app="maude")

  nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
      .navbar-header
        a.navbar-brand(ui-sref="home") App
        a.navbar-toggle(href="#download") Download
      ul.collapse.navbar-collapse.navbar-nav.nav.navbar-right
        li(ng-controller="SearchButtonController as searchBtnCtrl")
          a.search(ui-sref="search" ng-show="searchBtnCtrl.visible()")
            span
              i.fa.fa-search
              |  Search
        li
          a(href data-toggle="modal" data-target="#signin-modal" ng-show="!user") Sign In
        li
          a(href data-toggle="modal" data-target="#signup-modal" ng-show="!user") Sign Up
        li(ng-show="user" ng-controller="LogoutController as logoutCtrl")
          a(href ng-click="logoutCtrl.logoutUser()") Logout

  include ./includes/signin.jade
  include ./includes/signup.jade

  .views(ui-view)

  div(ng-controller="ProfileMeController")
  footer
    .container.footer-content
      .row
        .col-sm-4.text-center Email
          span.information email@domain.com
        .col-sm-4.text-center Phone
          span.information 123-456-891
        .col-sm-4.text-center Address
          span.information 1ddr3s

      hr

      .row
        .col-lg-8.col-lg-offset-2.text-center
          h3 Follow us
      .row
        .col-xs-2.col-xs-offset-3.text-center
          i.fa.fa-2x.fa-facebook-official
        .col-xs-2.text-center
          i.fa.fa-2x.fa-twitter
        .col-xs-2.text-center
          i.fa.fa-2x.fa-google-plus-square

      .row
        .col-sm-4.col-sm-offset-4.text-center.copyright Richard Montoya Â©

